<h2><%= link_to "back to list of Restaurants", restaurants_path %></h2>

<% if @restaurant %>

  <h3><%= @restaurant.name %></h3>
  <p><%= @restaurant.street %></p>
  <p><%= @restaurant.city %></p>
  <p><%= @restaurant.state %></p>
  <p><%= @restaurant.country %></p>
  <p><%= @restaurant.postal_code %></p>

<% else %>

  <p>Restaurant not found</p>

<% end %>
