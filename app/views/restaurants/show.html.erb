<% if @restaurant %>

  <h1><%= @restaurant.name %></h1>
  <p>Street: <i><%= @restaurant.street %></i></p>
  <p>City: <i><%= @restaurant.city %></i></p>
  <p>State: <i><%= @restaurant.state %></i></p>
  <p>Country: <i><%= @restaurant.country %></i></p>
  <p>Postal Code: <i><%= @restaurant.postal_code %></i></p>  

<% else %>

  <h1>Restaurant not found</h1>

<% end %>

<h3 style="bottom: 0px; position: fixed;"><%= link_to 'Return to NYC Restaurants', restaurants_path %></h3>

